<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityLeftRight</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/robotoregular</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityLeftRight</item>
    </style>

    <style name="AppThemeLogin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray_text_color2</item>
        <item name="android:screenOrientation">locked</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityLeftRight</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="AppThemeStart" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/fui_transparent</item>
        <item name="android:windowBackground">@drawable/face_logo</item>
        <item name="android:screenOrientation">locked</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityLeftRight</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="CustomActivityLeftRight" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="CustomActivityUpDown" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_to_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_to_down</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_to_up</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_to_down</item>
    </style>

